body {
	margin: 0;
	font-family: 'ヒラギノ角ゴ Pro W3','Hiragino Kaku Gothic Pro';
	background-color: #f5f5f5;
}

.flex-center {
	display: flex;
	align-items: center;
	justify-content: center;
}

.app-info {
	flex-direction: column;
	font-family: 'HelveticaNeue-Thin','Helvetica Neue Thin','Helvetica Neue','HirakakuInterface-W1';
	font-weight: 100;
	font-size: 16px;
}

.app-info span {
	line-height: 16px;
	margin: 2px 0;
}

.annotation {
	margin-top: 20px;
}

.link-btn {
	margin: 30px 10px;
	border: 1px solid #616161;
	border-radius: 5px;
	height: 40px;
}

.app-icon {
	height: 60px;
	width: 60px;
	background-color: #489BC6;
	border-radius: 10px;
	margin: 10px 0;
}

.header {
	display : none;
	position: fixed;
	height: 50px;
	width: 100%;
	top: 0;
	// display: flex;
	justify-content: center;
	font-weight: 700;
	color: white;

	&.ios {
		padding-top: 20px;
	}

}

.header-btn {
	flex: none;
	height: 50px;
	width: 50px;
	font-size:25px;
}

.header-title {
	flex: 1;
}

.content-area {
	padding-top: 20px;
	height: 100%;
}

.content-title {
	font-weight: 700;
	margin: 10px 10px 0 10px;
	font-size: 20px;
	/*border-bottom: 2px solid #489BC6; */
	background-color: #489BC6;
	border-radius: 5px;
	color: white;
	height: 40px;
}

.credit {
	margin: 10px 10px 5px 10px;
	color: #616161;
}

.credit .row {
	width: 100%;
	margin: 5px 0;
}

.credit .row .key {
	font-weight: 700;
	margin-right: 5px;
}

.content-area

	.icon-container
		margin-top 20px
		width 100%

	.icon
		background url('../img/perfumehub-icon.png')
		height 80px
		width 80px
		background-repeat no-repeat
		background-size contain
		border-radius 15px

		&.ptaios
			background url('../img/browser4pta-icon.png')
			background-repeat no-repeat
			background-size contain
			border-radius 15px

	.title
		font-size 20px
		color #414141
		margin-top 20px
		line-height 20px

	.detail
		font-size 12px
		color #717171

	.article
		margin 10px 10px
		color #616161
		text-align center
		font-size 14px
		line-height 1.5

	.article-list
		display flex
		flex-direction column
		align-items center
		width 100%

	.article-link
		width calc(90% - 20px)
		position relative
		padding-left 20px
		margin-top 10px
		padding-bottom 10px
		display block
		flex none
		border-bottom 1px solid #919191

		&:last-child
			border-bottom none

		&:before
			content "・"
			display block
			position absolute
			left 0
			top 0
			height 100%
			display flex
			align-items center
			justify-content center

		.article-title
			color #489BC6
			font-size 14px
			display block

		.article-date
			color #616161
			font-size 12px
			display block

	.footer
		flex-direction column
		padding-bottom 40px

		.bar
			width 90%
			border-bottom 1px solid #919191

		span
			margin-top 10px
			font-size 12px
			color #919191

	.license-detail
		padding-top 10px
		text-align center

	.license-list
		margin-top 10px

		.license
			padding 0 5% 5%

			.license-title
				font-size 14px
				line-height 14px
				font-weight 700

			.license-copyright
				font-size 12px
				line-height 13px
				height 26px
				margin 5px 0 5px 0

			.license-description
				font-size 12px
				line-height 14px

	.version-list
		padding 0 6%

		.version-detail
			padding 15px 0 0 0

			.version-title
				font-size 16px
				font-weight 700
				color #414141

				.codename
					font-size 14px
					color #717171
					font-weight 200
					margin-left 5px
					&:before
						content "CN : "
						font-size 10px

				.release-date
					font-size 12px
					color #717171
					font-weight 200
					margin-left 5px

					&:before
						content "- "
					&:after
						content " -"

			.version-description
				font-size 13px
				color #717171
				margin-top 4px

				.desc
					position relative
					padding-left 15px
					line-height 15px
					margin-bottom 5px

					&:before
						position absolute
						width 15px
						top 0
						left 0
						content "・"
